{
    "extends": "../tslint.json",
    "rules": {
        "directive-selector": [
            true,
            "attribute",
            "app",
            "camelCase"
        ],

        "max-line-length": [
          false,
           {
             "limit": 140,
             "ignore-pattern": "^import |^export {(.*?)}"
           }
        ],
        "component-selector": [
            true,
            "element",
            "app",
            "kebab-case"
        ]
    }

}
